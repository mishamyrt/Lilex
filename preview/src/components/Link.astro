---
import Typography, { type Props as TypographyProps } from './Typography.astro';

export type Props = TypographyProps<'a'>

const { href, class: className, ...props } = Astro.props;
---

<Typography
	as="a"
	href={href}
	color="custom"
	class:list={["link", className]}
	{...props}
>
	<slot />
</Typography>

<style lang="scss">
	.link, .link:global(.typography) {
		--link-weight: 400;

		text-decoration: underline;
		color: var(--color-content-action);
		cursor: pointer;
		transition: color var(--transition-slow), font-variation-settings var(--transition-slow);
		width: fit-content;
    display: inline-block;
		font-variation-settings: 'wght' var(--link-weight);

		&:hover {
			font-variation-settings: 'wght' 700;
			color: var(--color-content-action_hover);
			transition: color 0s, font-variation-settings 0s;
		}
	}
</style>
