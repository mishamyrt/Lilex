---
export interface Props {
	name: string;
	theme: "light" | "dark";
} 

const { name, theme } = Astro.props;
---
<div class:list={['layoutBlock', 'lilexTheme', theme]} data-block-name={name}>
	<slot />
</div>

<style>
	.layoutBlock {
		width: 100%;
		min-height: 100vh;
		display: flex;
    padding: var(--space-l);
		background-color: var(--color-background-primary);
	}
</style>

